<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/lay_loading"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_refreshing_layout_background"
    android:gravity="center"
    android:minHeight="@dimen/d40"
    android:orientation="horizontal" >

    <ProgressBar
        android:layout_width="@dimen/d20"
        android:layout_height="@dimen/d20"
        android:indeterminateDrawable="@drawable/d_custom_loading" />

    <TextView
        android:id="@id/lay_progress_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7.0dip"
        android:text="@string/str_load_news_content"
        android:textColor="@color/color_green"
        android:textSize="@dimen/d15" />

</LinearLayout>