<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d51"
        android:background="@drawable/top_banner" >

        <ImageView
            android:id="@id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/d15"
            android:src="@drawable/d_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/str_feedback_list"
            android:textColor="@color/color_black"
            android:textSize="@dimen/f18" />
    </RelativeLayout>

    <ListView
        android:id="@id/lay_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d10" >
    </ListView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d12"
        android:background="@drawable/feedback_shadow_line" />

    <Button
        android:id="@id/lay_header_right"
        style="@color/color_alpha_half"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/d5"
        android:layout_marginTop="@dimen/df15"
        android:background="@drawable/d_btn_confirm"
        android:text="@string/str_feedback_want"
        android:textColor="@color/color_white"
        android:layout_height="@dimen/d45"
        android:textSize="@dimen/d15" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:background="@drawable/d_page_beautiful" />

</LinearLayout>